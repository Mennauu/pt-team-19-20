{
  "name": "pt-team-19-20",
  "version": "1.0.0",
  "author": "Menno de Vries, Chelsea Doeleman, Robin Stut, Ben Langenberg",
  "description": "Project Tech · 2019-2020 · University of Amsterdam team assignment",
  "license": "GPL-3.0",
  "engines": {
    "node": "10.16.3"
  },
  "main": "server/server.js",
  "scripts": {
    "server": "node -r esm server/server.js",
    "server-nodemon": "nodemon -r esm server/server.js",
    "build": "del build && npm run build-directories && npm run build-js && npm run build-css && npm run prefix-css && npm run move-images && npm run move-fonts && npm run revision-js && npm run revision-css && npm run compress-css && npm run compress-js && npm run optimize-svgs",
    "start": "npm run server",
    "dev": "npm run kill-port & npm run server-nodemon & npm run watch & npm run lint-js -s & npm run lint-css & npm run build && npm run browser-sync",
    "browser-sync": "browser-sync start --proxy 'localhost:3000' --files 'server/build' 'server/views' 'server/components/**/*.html'",
    "optimize-svgs": "svgo -f build/assets/images",
    "lint-js": "eslint '**/*.js'",
    "lint-css": "sass-lint -c .sass-lint.yml '**/*.scss' -v -q",
    "move-fonts": "ncp server/assets/fonts build/assets/fonts",
    "move-images": "ncp server/assets/images build/assets/images",
    "build-directories": "make-dir build && make-dir build/assets && make-dir build/assets/css && make-dir build/assets/images && make-dir build/assets/js && make-dir build/assets/fonts",
    "build-images": "srcset 'server/assets/images/*' --width 1920,1440,1280,1024,768,480,320 --format webp -d build/assets/images --verbose",
    "build-js": "del build/assets/js && rollup --config server/assets/javascript/rollup.config.js",
    "build-css": "del build/assets/css && node-sass --importer node_modules/node-sass-glob-importer/dist/cli.js server/assets/sass/main.scss build/assets/css/styles.min.css --output-style compressed && npm run prefix-css",
    "prefix-css": "postcss build/assets/css/styles.min.css -u autoprefixer --no-map --output build/assets/css/styles.min.css",
    "revision-js": "gulp --gulpfile server/middleware/revisioning/revision.js replace-js",
    "revision-css": "gulp --gulpfile server/middleware/revisioning/revision.js replace-css",
    "compress-js": "bread-compressor 'build/assets/js/*.js'",
    "compress-css": "bread-compressor 'build/assets/css/*.css'",
    "kill-port": "kill-port 3000",
    "watch": "chokidar '**/*.js' -c 'npm run lint-js -s & npm run build-js && npm run revision-js && npm run compress-js' --ignore 'build/assets/js/*.js' --ignore 'server/server.js' --ignore 'server/routes/**/*' --ignore 'server/middleware/**/*' --ignore 'server/database/**/*'  --ignore 'node_modules/.cache/**/*' & chokidar '**/*.scss' -c 'npm run build-css & npm run lint-css && npm run revision-css && npm run compress-css' & chokidar 'server/assets/fonts/*' -c 'npm run move-fonts' --throttle 5000 & chokidar 'server/assets/images/*' -c 'npm run move-images' --throttle 5000"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.7",
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.4",
    "cron": "^1.8.2",
    "debounce": "^1.2.0",
    "dotenv": "^8.0.0",
    "esm": "^3.2.25",
    "express": "^4.16.4",
    "express-flash": "0.0.2",
    "express-session": "^1.17.0",
    "http": "0.0.0",
    "is-image": "^3.0.0",
    "js-cookie": "^2.2.1",
    "mongoose": "^5.8.11",
    "multer": "^1.4.2",
    "node-sass": "^7.0.0",
    "nouislider": "^14.1.1",
    "nunjucks": "^3.2.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "puppeteer": "^2.1.1",
    "range-inclusive": "^1.0.2",
    "shrink-ray-current": "^4.1.2",
    "validator": "^12.2.0",
    "wnumb": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/runtime-corejs3": "^7.8.4",
    "@flexis/srcset": "^1.4.2",
    "@rollup/plugin-alias": "^3.0.1",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@typescript-eslint/parser": "^2.19.2",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.0.3",
    "bread-compressor-cli": "^1.1.0",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^2.1.0",
    "connect-browser-sync": "^2.1.0",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.1",
    "eslint-utils": "^2.0.0",
    "fs": "0.0.1-security",
    "gulp": "^3.9.1",
    "gulp-cli": "^2.2.0",
    "gulp-rev": "^9.0.0",
    "gulp-rev-delete-original": "^0.2.3",
    "gulp-rev-replace": "^0.4.4",
    "imagemin-cli": "^5.1.0",
    "kill-port": "^1.6.0",
    "make-dir-cli": "^2.0.0",
    "ncp": "^2.0.0",
    "node-random-name": "^1.0.1",
    "node-sass-glob-importer": "^5.3.2",
    "nodemon": "^2.0.2",
    "postcss": "^7.0.27",
    "postcss-cli": "^7.1.0",
    "prettier": "^1.19.1",
    "rollup": "^1.31.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-prettier": "^0.6.0",
    "rollup-plugin-terser": "^5.2.0",
    "sass-lint": "^1.13.1",
    "select-random-file": "^1.1.0",
    "svgo": "^1.3.2",
    "typescript": "^3.7.5"
  },
  "optionalDependencies": {
    "iltorb": "~2.0.0",
    "node-zopfli-es": "~1.0.3"
  }
}
